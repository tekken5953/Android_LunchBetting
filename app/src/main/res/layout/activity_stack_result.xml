<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StackResult"
    android:background="@drawable/backgroundmain"
    android:id="@+id/rellaout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stack_title"
        android:layout_centerHorizontal="true"
        android:text="결 제 내 역"
        android:layout_marginTop="30dp"
        android:textColor="#f89b00"
        android:textSize="30dp"
        app:fontFamily="sans-serif-black"/>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:id="@+id/stacklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnlayout"
        android:layout_alignBottom="@id/scroll">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deletestackbtn"
            android:text="일 괄 삭 제"
            android:scaleX="1.5"
            android:scaleY="1.3"
            android:layout_marginLeft="80dp"
            android:textColor="#f89b00"
            android:background="#00ff0000"
            android:layout_marginBottom="15dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outstackbtn"
            android:layout_toRightOf="@id/deletestackbtn"
            android:text="나 가 기"
            android:scaleX="1.5"
            android:scaleY="1.3"
            android:layout_marginLeft="70dp"
            android:textColor="#f89b00"
            android:background="#00ff0000"
            android:layout_marginBottom="15dp"/>
    </LinearLayout>


</RelativeLayout>